@model Prueba5.Models.Informacion

@{
    ViewBag.Title = "Create";
}

<h2>Crear Información</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Informacion</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.EstadoID, "Estado")
        </div>
        <div class="editor-field">
            @Html.DropDownList("EstadoID", String.Empty)
            @Html.ValidationMessageFor(model => model.EstadoID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.fecha)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.fecha)
            @Html.ValidationMessageFor(model => model.fecha)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ParaderoID, "Paradero")
        </div>
        <div class="editor-field">
            @Html.DropDownList("ParaderoID", String.Empty)
            @Html.ValidationMessageFor(model => model.ParaderoID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.RecorridoID, "Recorrido")
        </div>
        <div class="editor-field">
            @Html.DropDownList("RecorridoID", String.Empty)
            @Html.ValidationMessageFor(model => model.RecorridoID)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
